    <groupId>cn.sixlab.minesitex</groupId>
    <artifactId>msx-plugin-wx</artifactId>
    <version>msx.0.2.0-SNAPSHOT</version>
    <packaging>jar</packaging>

    <name>msx-plugin-wx</name>
